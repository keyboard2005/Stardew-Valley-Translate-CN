        "ToArea": { "X": 4, "Y": 0, "Width": 4, "Height": 4 },
        "When": { "Ts_AFC_OpenImmediately": "true" }
      },

    //●FarmCaveにワープ追加 と ライト光削除
      {
        "Action": "EditMap",
        "Target": "Maps/FarmCave",
        "TextOperations": [
          {
            "Operation": "Append",
            "Target": ["MapProperties", "Warp"],
            "Value": "6 2 Custom_AdditionalFarmCave 9 14",
            "Delimiter": " "
          },
          {
            "Operation": "RemoveDelimited",
            "Target": ["MapProperties", "Light"],
            "Search": "6 2 4",
            "Delimiter": " "
          }
        ],
        "When": { "Ts_AFC_AvoidCertainBugs": "false" }
